<!DOCTYPE html>
<html>
<head>
  <title>Account Balance</title>
  <style>
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #f8f9fa;
      border-bottom: 1px solid #ddd;
    }
    .header img {
      height: 50px;
      width: 50px;
      border-radius: 50%;
    }
    .header h1 {
      margin: 0;
      font-size: 24px;
    }
    .balance-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: calc(100vh - 100px);
      font-size: 24px;
    }
    .balance {
      padding: 20px;
      border: 2px solid #007bff;
      border-radius: 10px;
      background-color: #f8f9fa;
      text-align: center;
    }
    .balance p {
      margin: 10px 0;
    }
    .home-button {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      text-decoration: none;
    }
    .home-button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <a href="/home" class="home-button">Home</a>
  <% if (userDetail && userDetail.length > 0) { %>
    <% userDetail.forEach(user => { %>
      <div class="header">
        <img src="/uploads/<%= user.photo %>" alt="User Photo">
        <div><h1><%= user.fullname %></h1></div>
      </div>
      <div class="balance-container">
        <div class="balance">
          <p><strong>Account Balance:</strong> â‚¹<%= user.balance %></p>
          <p><strong>UPI ID:</strong> <%= user.upid %></p>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <div class="balance-container">
      <div class="balance">
        <p>No user details found.</p>
      </div>
    </div>
  <% } %>
</body>
</html>
