<!DOCTYPE html>
<html>
<head>
  <title>Bank Transfer</title>
  <style>
    .form-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 50px;
    }
    .form-container input {
      margin-bottom: 15px;
      padding: 10px;
      width: 300px;
    }
    .form-container button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .form-container button:hover {
      background-color: #0056b3;
    }
    .home-button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .home-button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h1>Bank Transfer</h1>
    <% if (locals.message) { %>
        <div class="error-message"><%= message %></div>
    <% } %>
    <form action="/transfer-bank" method="post">
      <input type="hidden" name="upid" value="<%= upid %>">
      <div>
        <label for="account-number">Account Number:</label>
        <input type="text" id="account-number" name="account-number" maxlength="12" pattern="\d{12}" title="Account number should be 12 digits" required>
      </div>
      <div>
        <label for="ifsc-code">IFSC Code:</label>
        <input type="text" id="ifsc-code" name="ifsc-code" maxlength="11" pattern="[A-Za-z]{4}\d{7}" title="IFSC code should be 4 letters followed by 7 digits" required>
      </div>
      <button type="submit">Verify</button>
    </form>
    <button class="home-button" onclick="window.location.href='/home'">Home</button>
  </div>

</body>
</html>
