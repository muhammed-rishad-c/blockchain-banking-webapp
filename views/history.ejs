<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f9f9f9;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .credit {
            color: green;
        }

        .debit {
            color: red;
        }

        .home-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .home-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Transaction History</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= transaction.sender === upid ? transaction.recipient_name : transaction.sender_name %></td>
                    <td><%= new Date(transaction.date).toLocaleString('en-IN', { timeZone: 'Asia/Kolkata' }) %></td>
                    <td class="<%= transaction.sender === upid ? 'debit' : 'credit' %>">
                        <%= transaction.sender === upid ? 'Debit' : 'Credit' %>
                    </td>
                    <td><%= transaction.amount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/home" class="home-button">Home</a>
</body>
</html>
