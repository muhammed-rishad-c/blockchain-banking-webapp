<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Water Bill Payment</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f1f1f1;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .authority {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
        }
        .authority:last-child {
            border-bottom: none;
        }
        .title {
            font-weight: bold;
        }
        .buttons {
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            margin-right: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .home-button {
            display: block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
        }
        .home-button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/home" class="home-button">Home</a>
        <h2>Water Bill Authorities</h2>
        <% if (waterAuthority && waterAuthority.length > 0) { %>
            <% waterAuthority.forEach(authority => { %>
                <div class="authority">
                    <form action="/submit-water-bill-authority" method="POST">
                        <div><span class="title">Name:</span> <%= authority.name %></div>
                        <img src="/uploads/<%= authority.photo %>" alt="Water Photo" class="Water-photo">
                        <input type="hidden" name="authorityName" value="<%= authority.name %>">
                        <div class="buttons">
                            <button type="submit">Pay</button>
                        </div>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <div>No water authority details found.</div>
        <% } %>
    </div>
</body>
</html>
